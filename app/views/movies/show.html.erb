<section class="movie-details">
    <div class="details">
      <h1><%= link_to @movie.title, movie_path %></h1>
      <h2>
        <%= year_of(@movie) %> &bull; <%= @movie.rating %>
      </h2>
      <p>
        <%= @movie.description %>
      </p>
      <table>
        <tr>
          <th>Total Gross:</th>
          <td><%= total_gross(@movie) %></td>
        </tr>
      </table>
    </div>
  </section>