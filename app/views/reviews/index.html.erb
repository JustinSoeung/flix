<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= render "shared/stars", percent: review.stars_as_percent%>
      <p>
        <%= review.name %>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>
      </p>
      <p>
        <%= review.comment %>
      </p>
    </li>
    <section class="admin">
       
        <%= link_to "Delete", @review , class: "button",
                                method: :delete, data: {confirm: 'Are you sure?'} %>
    </section>
  <% end %>
</ul>